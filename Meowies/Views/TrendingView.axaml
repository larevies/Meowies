<UserControl x:Class="Meowies.Views.TrendingView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Meowies.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:TrendingViewModel"
             mc:Ignorable="d">
    <Design.DataContext>
        <vm:TrendingViewModel/>
    </Design.DataContext>
    <Border Background="Aqua" Height="750" VerticalAlignment="Center">
        <Grid Background="Transparent" Width="850" HorizontalAlignment="Center" VerticalAlignment="Center"
              RowDefinitions="100, 150, 200, 250" ShowGridLines="True">
            <TextBlock Grid.Row="0" FontSize="35" HorizontalAlignment="Center" Foreground="#C69AFF">Trending!</TextBlock>
        </Grid>
    </Border>
</UserControl>
